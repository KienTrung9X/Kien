{
  "name": "maintenance-logger",
  "version": "1.0.0",
  "description": "Hệ thống Ghi nhận Bảo dưỡng",
  "main": "main.js",
  "author": "Đinh Tấn Tho",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.firstsolar.maintenancelogger",
    "productName": "Hệ thống Bảo dưỡng",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "vendor/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}
